{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "types": ["node"],
    "lib": ["ES2022"]    
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
